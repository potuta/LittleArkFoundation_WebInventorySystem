@* @model IEnumerable<WebApplication1.Models.UsersModel> *@
@model UsersViewModel

@{
	ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}

<h2>Users</h2>
<a href="#" class="btn" data-toggle="modal" data-target="#createUserModal">Create New</a>
@* <a href="@Url.Action("Create", "Users", new { dbType = "main" })">Create New</a> *@
    @* <a href="@Url.Action("Index", new { dbType = "main" })" class="btn btn-primary">Main Database</a>
    <a href="@Url.Action("Index", new { dbType = "archive" })" class="btn btn-secondary">Archive Database</a> *@
	<a asp-action="Index" asp-controller="Users" asp-route-dbType="main" class="btn-content">Main Database</a>
	<a asp-action="Index" asp-controller="Users" asp-route-dbType="archive" class="btn-content">Archive Database</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.Username</td>
                <a href="@Url.Action("Details", new { id = user.UserID })">Details</a> |
                <a href="@Url.Action("Edit", new { id = user.UserID})">Edit</a> |
                <a href="@Url.Action("Delete", new { id = user.UserID })">Delete</a>
            </tr>
        }
    </tbody>
</table>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1" role="dialog" aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createUserModalLabel">Create New User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Users" method="post">
                    <div class="form-group">
                        <label asp-for="NewUser.Username" class="control-label"></label>
                        <input type="text" asp-for="NewUser.Username" class="form-control" />
                        <span asp-validation-for="NewUser.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.Email" class="control-label"></label>
                        <input type="text" asp-for="NewUser.Email" class="form-control" />
                        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewUser.Password" class="control-label"></label>
                        <input type="password" asp-for="NewUser.Password" class="form-control" type="password" />
                        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>