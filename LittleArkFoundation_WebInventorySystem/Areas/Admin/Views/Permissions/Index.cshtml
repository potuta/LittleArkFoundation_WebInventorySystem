@model PermissionsViewModel

@{
    ViewData["Title"] = "Permissions";
    Layout = "_AdminLayout";
    string dbType = ViewBag.dbType ?? "main";
}

<h2>Permissions</h2>

<div class="search-container">
    <form asp-action="Search" asp-controller="Permissions" asp-route-dbType="@dbType">
        <div class="input-group">
            <input type="search" name="searchString" class="form-control" placeholder="Search by PermissionID/Name" aria-label="Search">
            <button type="submit" class="btn btn-dark">Search</button>
        </div>
    </form>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Permissions" asp-route-dbType="@dbType">Back to Full List</a>
</div>

<div>
    <!-- Button to Open Modal -->
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createPermissionModal">
        Create New
    </button>
</div>

@if (TempData["CreateSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["CreateSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table">
    <thead>
        @if (Model != null)
        {
            <tr>
                <th>PermissionID</th>
                <th>Name</th>
                <th></th>
            </tr>
        }
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var permission in Model.Permissions)
            {
                <tr>
                    <td>@permission.PermissionID</td>
                    <td>@permission.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = permission.PermissionID })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", new { id = permission.PermissionID })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this permission?');">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Create Permission Modal -->
<div class="modal fade" id="createPermissionModal" tabindex="-1" aria-labelledby="createPermissionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPermissionModalLabel">Create New Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Permissions" asp-route-dbType="@dbType" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="permissionName" class="form-label">Permission Name</label>
                        <input type="text" class="form-control" id="permissionName" name="name" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Permission</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


